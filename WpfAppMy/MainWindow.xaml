        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel >
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Alumnos">
                <MenuItem Header="Lista de Alumnos del Semestre" Click="listaAsignacionesSemestre_Click"/>
